<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/tocat_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Призначення"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="191dp" />

    <EditText
        android:id="@+id/fromcat_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Джерело"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="87dp" />

        <EditText
            android:id="@+id/details_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Деталі"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="87dp" />
        <EditText
            android:id="@+id/sum_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Сума"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="87dp" />
        <CheckBox
            android:id="@+id/scheduleCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запланувати" />
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Оберіть дату"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black" />
        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_marginBottom="30dp"
            android:text="Додати"
            tools:layout_editor_absoluteX="248dp"
            tools:layout_editor_absoluteY="633dp" />

        <TextView
            android:id="@+id/textDashboard"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
       />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>