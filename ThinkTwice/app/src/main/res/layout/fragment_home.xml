<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_transaction_title"
                android:layout_width="203dp"
                android:layout_height="49dp"
                android:layout_marginTop="3dp"
                android:text="Транзакції"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <Button
                android:id="@+id/open_category_button"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="#000000"
                android:text="Категорії"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="7dp" />

            <Button
                android:id="@+id/open_modal_transaction_button"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:backgroundTint="@color/black"
                android:text="Додати"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="7dp" />

            <RelativeLayout
                android:id="@+id/bottomDiv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:color/white"
                android:layout_marginBottom="350dp"

                android:orientation="vertical"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/middleDiv">

                <TextView
                    android:id="@+id/textBlockTransactions2"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:text="Заплановані транзакції"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/textBlockTransactions2"
                    >
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TableLayout
                                android:id="@+id/plannedTransactionsTable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:divider="@drawable/table_divider"
                                android:showDividers="middle"
                                android:stretchColumns="*">

                                <!-- Заголовок таблиці -->
                                <TableRow>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Джерело"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Призначення"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Деталі"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Дата"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Сума"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                </TableRow>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray"
                                    android:layout_margin="4dp" />
                            </TableLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </ScrollView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottomDiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:color/white"
                android:layout_marginBottom="350dp"

                android:orientation="vertical"
                android:padding="1dp"
                app:layout_constraintTop_toBottomOf="@id/middleDiv">

                <TextView
                    android:id="@+id/textBlockTransactions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Транзакції"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/textBlockTransactions"
                    android:id="@+id/scrollView1">
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TableLayout
                                android:id="@+id/transactionsTable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:divider="@drawable/table_divider"
                                android:showDividers="middle"
                                android:stretchColumns="*">

                                <!-- Заголовок таблиці -->
                                <TableRow>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Джерело"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Призначення"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Деталі"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Дата"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Сума"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textStyle="bold"
                                        android:gravity="center" />
                                </TableRow>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray"
                                    android:layout_margin="4dp" />
                            </TableLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>